<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ECAT.UWP">



	<Style TargetType="local:SocketTC">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:SocketTC">
					<Grid Width="12" Height="12">
						<Ellipse Fill="{StaticResource BlackBrush}"/>
						<Ellipse Margin="2"
							Fill="{StaticResource GrayBrush}"/>
						<!--Fill="{Binding SocketState, Converter={StaticResource BackgroundConverter}}"/>-->
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


</ResourceDictionary>
