<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ECAT.UWP">

	<Style TargetType="local:GroundTC">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:GroundTC">
					<Canvas>

						<Line X1="50" X2="50" Y1="0" Y2="50"
							Stroke="{StaticResource BlackBrush}"
							StrokeThickness="10"/>

						<Line X1="10" X2="90" Y1="50" Y2="50"
							Stroke="{StaticResource BlackBrush}"
							StrokeThickness="8"/>
							
						<Line X1="22" X2="78" Y1="62" Y2="62"
							Stroke="{StaticResource BlackBrush}"
							StrokeThickness="8"/>

						<Line X1="34" X2="66" Y1="74" Y2="74"
							Stroke="{StaticResource BlackBrush}"
							StrokeThickness="8"/>

						<local:SocketTC Terminal="{Binding Component.Terminal}"
							Canvas.Left="50"/>

					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
