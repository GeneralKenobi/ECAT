<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ECAT.UWP">


	<Style TargetType="local:ResistorTC">		
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:ResistorTC">
					<Canvas>

						<!-- The american model -->
						<!--<Polyline Stroke="{StaticResource BlackBrush}"
								StrokeThickness="5"
								Points="0,25 26,25 30,34.5 38,15.5 46,34.5 54,15.5 62,34.5 70,15.5 74,25 100,25"								
								StrokeLineJoin="Round"/>-->

						<!-- The European model -->
						<!-- The point 100,12.5 is doubled because otherwise the miter is awfully long when turning 180 degrees -->
						<Polyline Stroke="{StaticResource BlackBrush}"
								StrokeThickness="5"
								Points="0,25 25,25 25,15.5 75,15.5 75,25 100,25 100,25 75,25 75,34.5 25,34.5 25,25"/>

						<local:SocketTC Canvas.Top="25" Position="{Binding Component.TerminalA}"/>
						<local:SocketTC Canvas.Left="100" Canvas.Top="25" Position="{Binding Component.TerminalB}"/>

					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
