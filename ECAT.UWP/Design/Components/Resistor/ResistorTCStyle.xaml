<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ECAT.UWP">


	<Style TargetType="local:ResistorTC">		
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:ResistorTC">
					<Canvas>

						<!-- The american model -->
						<!--<Polyline Stroke="{StaticResource BlackBrush}"
								StrokeThickness="4"
								Points="0,12.5 26,12.5 30,22 38,3 46,22 54,3 62,22 70,3 74,12.5 100,12.5"
								Width="100"
								Height="25"
								StrokeLineJoin="Round"/>-->

						<!-- The European model -->
						<!-- The point 100,12.5 is doubled because otherwise the miter is awfully long when turning 180 degrees -->
						<Polyline Stroke="{StaticResource BlackBrush}"
								StrokeThickness="6"
								Points="0,25 25,25 25,15.5 75,15.5 75,25 100,25 100,25 75,25 75,34.5 25,34.5 25,25"/>

						<local:SocketTC Canvas.Left="-6" Canvas.Top="19" PartialNode="{Binding Component.TerminalA}"/>
						<local:SocketTC Canvas.Left="94" Canvas.Top="19" PartialNode="{Binding Component.TerminalB}"/>

					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
